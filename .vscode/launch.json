    "version": "0.2.0",
    "configurations": [
    {
        "name": "Launch Chrome 3000",
        "request": "launch",
        "type": "pwa-chrome",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/public"
    },
        {
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "restart": true,
            "name": "Node attached",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}